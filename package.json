  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@types/node": "^15.12.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.10",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "css-loader": "^5.2.6",
    "electron": "^13.1.4",
    "electron-builder": "^22.11.7",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^7.29.0",
    "eslint-plugin-react": "^7.24.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.2.12",
    "html-webpack-plugin": "^5.3.2",
    "prettier": "^2.3.1",
    "react-refresh": "^0.10.0",
    "style-loader": "^2.0.0",
    "typescript": "^4.3.4",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "dotenv-safe": "^8.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-is": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.3.0",
    "typeface-titillium-web": "^1.1.13"
  },
  "scripts": {
    "build": "yarn build-main && yarn build-react",
    "build-main": "rm -rf ./build/electron && NODE_ENV=production webpack --mode production --config ./webpack/main.js",
    "build-react": "rm -rf ./build/react && NODE_ENV=production webpack --mode production --config ./webpack/react.js",
    "dev": "concurrently \"yarn dev-main\" \"yarn dev-react\"",
    "dev-main": "NODE_ENV=development webpack --mode development --config ./webpack/main.js --watch",
    "dev-react": "NODE_ENV=development webpack serve --mode development --config ./webpack/react.js --hot",
    "dist": "rm -rf ./dist/* && electron-builder -lw --dir && electron-builder -lw",
    "dist-linux": "rm -rf ./dist/* && electron-builder -l --dir && electron-builder -l --publish always",
    "dist-win": "rm -rf ./dist/* && electron-builder -w --dir && electron-builder -w",
    "start": "electron .",
    "release": "yarn build && yarn dist",
    "create-icons": "./scripts/create-icons"
  },
  "repository": "git@github.com:FlavioSant/test-release.git"
}
